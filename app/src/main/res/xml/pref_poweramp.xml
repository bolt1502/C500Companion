<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <SwitchPreference
        android:title="@string/prefPowerAmpUseTitle"
        android:summary="@string/prefPowerAmpUseSummary"
        android:defaultValue="@bool/prefPowerAmpUseDefault"
        android:key="@string/prefPowerAmpUse" />
    <CheckBoxPreference
        android:title="@string/prefPowerAmpLaunchDirectTitle"
        android:key="@string/prefPowerAmpLaunchDirect"
        android:defaultValue="@bool/prefPowerAmpLaunchDirectDefault" />
    <CheckBoxPreference
        android:title="@string/prefPowerAmpUseApiTitle"
        android:key="@string/prefPowerAmpUseApi"
        android:defaultValue="@bool/prefPowerAmpUseApiDefault" />
    <CheckBoxPreference
        android:title="@string/prefPowerAmpPauseOnSleepTitle"
        android:key="@string/prefPowerAmpPauseOnSleep"
        android:defaultValue="@bool/prefPowerAmpPauseOnSleepDefault" />
    <CheckBoxPreference
        android:title="@string/prefPowerAmpPlayOnWakeupTitle"
        android:key="@string/prefPowerAmpPlayOnWakeup"
        android:defaultValue="@bool/prefPowerAmpPlayOnWakeupDefault" />
    <CheckBoxPreference
        android:title="@string/prefPowerAmpSwitchWithSeekTitle"
        android:key="@string/prefPowerAmpSwitchWithSeek"
        android:defaultValue="@bool/prefPowerAmpSwitchWithSeekDefault" />
</PreferenceScreen>
